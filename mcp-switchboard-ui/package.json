{
	"name": "mcp-switchboard-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rm -rf .svelte-kit build target src/bindings.ts dist",
		"generate-bindings": "cd ../binding-generator && cargo run",
		"test": "./test-fast.sh",
		"test:run": "vitest run",
		"test:watch": "vitest",
		"test:types": "npm run check && npm run test:run",
		"build": "npm run clean && npm run generate-bindings && npm run test:types && vite build",
		"verify": "./test-verify.sh",
		"tauri:dev": "npm run clean && npm run generate-bindings && tauri dev",
		"tauri:build": "npm run build && tauri build",
		"lima:setup": "./lima-manager.sh setup",
		"lima:verify": "./lima-manager.sh verify",
		"lima:destroy": "./lima-manager.sh destroy",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"jsdom": "^26.1.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@tauri-apps/api": "^2.7.0",
		"@tauri-apps/plugin-log": "^2.6.0"
	}
}
