{
	"name": "mcp-switchboard-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run inject-build-info && vite build",
		"build:static": "npm run inject-build-info && STATIC_BUILD=true vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:browser": "jest --config=jest.config.cjs --testMatch=\"**/browser/*.test.js\" --testTimeout=30000",
		"inject-build-info": "node scripts/inject-build-info.js",
		"postinstall": "npx just-install",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"express": "^5.1.0",
		"jest": "^30.0.5",
		"jsdom": "^26.1.0",
		"just-install": "^1.0.0",
		"puppeteer": "^24.16.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@tauri-apps/api": "^2.7.0",
		"@tauri-apps/plugin-log": "^2.6.0"
	}
}
